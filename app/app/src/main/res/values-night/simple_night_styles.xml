<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 简单明确的夜间模式样式，保持与日间模式一致 -->
    <style name="SimpleTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#54B4EF</item>
        <item name="colorPrimaryDark">#0091EA</item>
        <item name="colorAccent">#54B4EF</item>
        <item name="android:windowBackground">@color/qq_bg_light</item>
        <item name="android:statusBarColor">@color/qq_bg_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/qq_bg_light</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- 夜间模式基础组件样式 -->
    <style name="Widget.GuangXiaoQing" parent="android:Widget">
        <!-- 夜间模式基础样式属性 -->
    </style>

    <!-- 夜间模式下的顶部导航栏样式 -->
    <style name="Widget.GuangXiaoQing.TopNavigationBar" parent="Widget.GuangXiaoQing">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <!-- 夜间模式下的菜单按钮样式 -->
    <style name="Widget.GuangXiaoQing.MenuButton" parent="Widget.GuangXiaoQing">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">12dp</item>
        <item name="android:contentDescription">更多选项</item>
    </style>
</resources>